{% extends 'base.html.twig' %}


{% block body %}
    <h1>Ajouter une personne à la soirée : {{ soiree.Nom }}</h1>

    <table class="table table-dark">
        <tr>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Montant</th>
            <th>Part</th>
            <th>Modifier</th>
            <th>Supprimer</th>
        </tr>

        {% for p in personne %}
            <tr>
                <td>{{ p.Nom }}</td>
                <td>{{ p.Prenom }}</td>
                <td>{{ p.Montant }}</td>
                <td>{{ p.Part }}</td>
                <td><a class="btn btn-warning" href="{{ path('modifier_personne', {"id":p.id, "idSoiree":soiree.id}) }}" >Modification</a></td>
                <td><a class="btn btn-danger" href="{{ path('supprimer_personne', {"id":p.id, "idSoiree":soiree.id}) }}" >Supprimer</a></td>
            </tr>
        {% endfor %}
    </table>

    {{ form(formulaire) }}

    <a class="btn btn-danger" href="{{ path("ajouter_personne", {"idSoiree":soiree.id}) }}"> retour aux détails de la soirée {{ soiree.Nom }}</a>

{% endblock %}