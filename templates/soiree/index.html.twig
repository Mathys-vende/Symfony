{% extends 'base.html.twig' %}


{% block body %}

{{ count }}
    <h1>Ajouter une soirée</h1>

    <a class="btn btn-primary" href="{{ path("ajouter_soiree") }}">Création Soirée</a>

    <h1>Toutes les soirées</h1>

    <table class="table">
        <tr>
            <th>Nom</th>
            <th>Détail de la soirée</th>
            <th>Modifier</th>
            <th>Supprimer</th>
        </tr>

        {% for s in soiree %}
            <tr>
                <td>{{ s.Nom }}</td>

                <td><a class="btn btn-success" href="{{ path('ajouter_personne', {"idSoiree":s.id}) }}" >Détails</a></td>

                <td><a class="btn btn-warning" href="{{ path('modifier_soiree', {"id":s.id}) }}" >Modification</a></td>

                <td><a class="btn btn-danger" href="{{ path('supprimer_soiree', {"id":s.id}) }}" >Supprimer</a></td>
            </tr>
        {% endfor %}
    </table>



{% endblock %}